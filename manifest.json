{
    "manifest_version": 2,
    "name": "skribbl.io drawing bot",
    "description": "A drawing bot for skribbl.io",
    "version": "1.0",
    "permissions": [
        "activeTab",
		"tabs",
		"http://*/*",
		"https://*/*",
		"webRequest",
		"webRequestBlocking",
		"webNavigation",
		"management"
    ],
    "background": {
        "scripts": ["js/background.js"]
    },
    "icons": {
        "256": "icons/256.png",
        "128": "icons/128.png",
        "64": "icons/64.png"
    },
    "web_accessible_resources": ["*"]
}
